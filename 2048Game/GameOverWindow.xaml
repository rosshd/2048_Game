<Window x:Class="_2048Game.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over" Height="327" Width="400">
    <Grid>
        <TextBlock x:Name="GameOverText" Text="Game Over!" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" />
        <TextBlock x:Name="HighScoreText" Text="High Score: 0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,166,0,0" />
        <TextBlock x:Name="ScoreText" Text="Score: 0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,124,0,0" />
        <Button x:Name="RestartButton" Content="Restart" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="153,0,0,21" Click="RestartButton_Click"/>
    </Grid>
</Window>
